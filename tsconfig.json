{
  "compilerOptions": {
    "moduleResolution": "node",
    "target": "ES6",
    "module": "ESNext",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "experimentalDecorators": true,      // Adicionada para habilitar decoradores
    "emitDecoratorMetadata": true        // Adicionada para emitir metadados de decoradores
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules"]
}
